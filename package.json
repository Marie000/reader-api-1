{
  "name": "hobb-api",
  "version": "0.0.1",
  "description": "Hobb API Server for Rebus Reader",
  "main": "index.js",
  "engines": {
    "node": "^8.0.0"
  },
  "scripts": {
    "test-unit": "SECRETORKEY=kick-opossum-snowiness ISSUER=auth.reader-api.test DOMAIN=https://reader-api.test tap -R classic --cov tests/unit/*.test.js",
    "test-integration": "SECRETORKEY=kick-opossum-snowiness ISSUER=auth.reader-api.test DOMAIN=https://reader-api.test NODE_ENV=test tap -R classic --cov tests/integration/*.test.js",
    "test-models": "SECRETORKEY=kick-opossum-snowiness ISSUER=auth.reader-api.test DOMAIN=https://reader-api.test NODE_ENV=test tap -R classic --cov tests/models/*.test.js",
    "test": "SECRETORKEY=kick-opossum-snowiness ISSUER=auth.reader-api.test DOMAIN=https://reader-api.test NODE_ENV=test tap -R classic --cov tests/*/*.test.js",
    "start": "node index.js",
    "dev-server": "SECRETORKEY=kick-opossum-snowiness ISSUER=auth.reader-api.test DOMAIN=http://localhost:8080 nodemon dev.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RebusFoundation/reader-api.git"
  },
  "author": "Rebus Foundation",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/RebusFoundation/reader-api/issues"
  },
  "homepage": "https://github.com/RebusFoundation/reader-api#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "csurf": "^1.9.0",
    "documentation": "^8.1.2",
    "flow-bin": "^0.80.0",
    "flow-coverage-report": "^0.6.0",
    "husky": "^1.0.0-rc.14",
    "jsonwebtoken": "^8.3.0",
    "lint-staged": "^7.2.2",
    "node-mocks-http": "^1.7.3",
    "nodemon": "^1.18.7",
    "onchange": "^4.1.0",
    "passport-mock-strategy": "^1.1.1",
    "prettier-standard": "^8.0.1",
    "proxyquire": "^2.1.0",
    "sinon": "^6.3.3",
    "sqlite3": "^4.0.4",
    "standard": "^11.0.1",
    "supertest": "^3.3.0",
    "tap": "^12.0.1"
  },
  "dependencies": {
    "@google-cloud/storage": "^2.3.1",
    "accesscontrol": "^2.2.1",
    "arrify": "^1.0.1",
    "compression": "^1.7.3",
    "connect-ensure-login": "^0.1.1",
    "cookie-session": "^2.0.0-beta.3",
    "debug": "^4.1.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "knex": "^0.15.2",
    "lodash": "^4.17.11",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "objection": "^1.2.6",
    "objection-db-errors": "^1.0.0",
    "objection-guid": "^3.0.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.4.3",
    "sanitize-html": "^1.19.0",
    "short-uuid": "^3.0.0",
    "swagger-jsdoc": "^3.2.6"
  },
  "standard": {
    "ignore": [
      "node_modules/**",
      "flow-typed/**"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "test/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "flow check && lint-staged",
      "commitmsg": "commitlint -E GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{js,md}": [
        "prettier-standard",
        "git add"
      ]
    }
  }
}
